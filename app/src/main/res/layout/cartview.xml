<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/cart_item_bg"
    android:padding="14dp">

    <!-- Product Title -->
    <TextView
        android:id="@+id/cartProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/cartProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cartProductTitle"
        android:layout_marginTop="6dp"
        android:text="Qty: 1"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Price -->
    <TextView
        android:id="@+id/cartProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cartProductQuantity"
        android:layout_alignParentEnd="true"
        android:text="â‚¹199"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:textSize="16sp" />

    <!-- Buy Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCartBuy"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cartProductQuantity"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@id/btnCartRemove"
        android:backgroundTint="#00C853"
        android:background="@drawable/button_hover"
        android:text="Buy"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="28sp" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/btnCartRemove"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cartProductQuantity"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#FFF3F3"
        android:text="Remove"
        android:textAllCaps="false"
        android:textColor="#D50000"
        android:textSize="16sp" />

</RelativeLayout>
