<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (can be overridden by backgroundTint) -->
    <solid android:color="#FFD600" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
