<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#B0BEC5"/> <!-- Light grey border -->

    <!-- Optional padding inside the EditText -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
